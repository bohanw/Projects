val flatten_def =
  Define `(flatten  []           = [])
     /\   (flatten ([]::rst)     = flatten rst)
     /\   (flatten ((h::t)::rst) = h::flatten(t::rst))`;

val Tot_def = 
  Define
    `(Tot [] = 0) /\
     (Tot (0::t) = Tot t) /\
     (Tot (SUC n::t) = 1 + Tot (n::t))`;

val Tot_def = 
  Define
    `(Tot [] = 0) /\
     (Tot (0::t) = Tot t) /\
     (Tot (n::t) = 1 + Tot (n-1::t))`;

val gcd_def = 
Define 
    `(gcd (0,y) = y)         
 /\  (gcd (SUC x, 0) = SUC x)
 /\  (gcd (SUC x, SUC y) = 
         if y <= x then gcd(x-y, SUC y) 
                   else gcd(SUC x, y-x))`;

val gcd_def =  (* curried *)
  Define 
    `(gcd 0 y = y)  /\
     (gcd (SUC x) 0 = SUC x) /\
     (gcd (SUC x) (SUC y) = 
         if y <= x then gcd (x-y)   (SUC y) 
                   else gcd (SUC x) (y-x))`;

val gcd_def = (* using MOD *)
 Define
   `gcd a b = if a = 0 then b else gcd (b MOD a) a`;

