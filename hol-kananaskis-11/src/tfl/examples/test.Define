 Define
  `(test d1 [] = d1)  /\
   (test [] d2 = d2)  /\
   (test (p1::d1) (p2::d2)  =
      case LOOKUP d2 (FST p1) of
        NONE      => p1 :: test d1 (p2::d2)
     | SOME(v,x) => (FST p1,x) :: test d1 d2)`;


